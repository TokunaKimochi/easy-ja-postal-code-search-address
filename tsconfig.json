{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "resolve": {
    "extensions": [".ts", ".js"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./dist"]
}
